{
  "compilerOptions": {
    "paths": {
      "~/utils/*": ["./utils/*"],
      "~/types": ["./types"]
    },
    "baseUrl": "./src",
    "rootDir": "./src",
    "incremental": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "lib",
    "strictNullChecks": true,
    "target": "es2018",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["./src",  "@types"],
  "exclude": ["node_modules", "bin", "lib", "**/__tests__/*"]
}
